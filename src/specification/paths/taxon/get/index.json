{
  "tags": ["slim-taxonomy-api"],
  "summary": "Fetches taxa by name",
  "description": "",
  "operationId": "getTaxaByName",
  "produces": ["application/json"],
  "parameters": [
    {
      "name": "filter[name]",
      "in": "query",
      "description": "Taxon name - accepted scientific, synonym or vernacular name",
      "required": true,
      "type": "string",
      "example": "Alces alces"
    },
    {
      "name": "search_type",
      "in": "query",
      "description": "Search type - exact (default) or partial",
      "required": false,
      "type": "string",
      "enum": ["exact", "partial"],
      "example": "exact"
    }
  ],
  "responses": {
    "200": {
      "description": "successful operation",
      "$schema": {
        "$model": "__ROOT__taxon",
        "$modelType": "taxon",
        "$type": "arrayResponse"
      }
    },
    "400": {
      "description": "Invalid status value"
    }
  }
}
